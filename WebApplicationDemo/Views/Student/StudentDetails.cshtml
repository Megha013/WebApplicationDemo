
@{
    ViewData["Title"] = "StudentDetails";
}

<h1>StudentDetails</h1>
<form asp-action="StudentDetails">
    <table class="table">
        <tr>
            <td>Enter your RollNo : </td>
            <td>
                <input type="text" name="rollno" id="rollno" />
            </td>
        </tr>
        <tr>
            <td>Enter your Name : </td>
            <td>
                <input type="text" name="name" id="name" />
            </td>
        </tr>
        <tr>
            <td>Select Branch : </td>
            <td>@Html.DropDownList("branch")</td>
        </tr>
        <tr>
            <td>Select Year : </td>
            <td>
                <input type="radio" name="year" value="1" id="y1" /> 1st Year
                <input type="radio" name="year" value="2" id="y2" /> 2nd Year
                <input type="radio" name="year" value="3" id="y3" /> 3rd Year
                <input type="radio" name="year" value="4" id="y4" /> 4th Year
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Save" class="btn btn-primary" />
            </td>
        </tr>
    </table>
</form>
